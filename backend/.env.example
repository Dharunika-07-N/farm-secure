# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/farmsecure?schema=public"

# JWT Authentication
JWT_SECRET="your_jwt_secret_key_change_me"
JWT_EXPIRES_IN="7d"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# Google Maps API (Optional - for better geocoding)
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=""

# Email Configuration (Optional - for notifications)
# For Gmail: Enable "Less secure app access" or use App Password
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Farm-Secure Alerts <alerts@farmsecure.com>"

# For development testing (Ethereal Email)
ETHEREAL_USER=""
ETHEREAL_PASS=""
